# Saudi Projects Intelligence Platform - Environment Configuration

# OpenAI API (for AI extraction and classification)
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL=sqlite:///data/projects.db

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=24
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# User Agents (rotate for scraping)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# LinkedIn (optional - requires authentication)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Application Settings
APP_TITLE=Saudi Projects Intelligence Platform
APP_MODE=production
DEBUG=false

# Data Refresh
AUTO_REFRESH_ENABLED=true
REFRESH_INTERVAL_MINUTES=60

# AI Configuration
AI_MODEL=gpt-4-turbo-preview
AI_TEMPERATURE=0.3
CONFIDENCE_THRESHOLD=0.7

# Sources Configuration
ENABLE_WEB_SCRAPING=true
ENABLE_NEWS_SCRAPING=true
ENABLE_LINKEDIN_SCRAPING=false
ENABLE_MAPS_SCRAPING=true
