# Streamlit Secrets Configuration Template
# Copy this to secrets.toml in Streamlit Cloud deployment settings

# OpenAI API Key (Required for AI features)
OPENAI_API_KEY = "your_openai_api_key_here"

# Database Configuration
DATABASE_URL = "sqlite:///data/projects.db"

# Application Settings
APP_MODE = "production"
DEBUG = false

# AI Configuration
AI_MODEL = "gpt-4-turbo-preview"
AI_TEMPERATURE = 0.3
CONFIDENCE_THRESHOLD = 0.7

# Scraping Configuration
SCRAPING_ENABLED = true
SCRAPING_INTERVAL_HOURS = 24
MAX_CONCURRENT_REQUESTS = 5
REQUEST_TIMEOUT = 30

# Source Toggles
ENABLE_WEB_SCRAPING = true
ENABLE_NEWS_SCRAPING = true
ENABLE_LINKEDIN_SCRAPING = false
ENABLE_MAPS_SCRAPING = true

# Logging
LOG_LEVEL = "INFO"

# Auto Refresh
AUTO_REFRESH_ENABLED = true
REFRESH_INTERVAL_MINUTES = 60
